  for i,v in pairs(fs.list("/")) do
    if v == "rom" then
    elseif v == "disk" then
    elseif v == "moarp" then
    else
      fs.delete("/"..v)
    end
  end
  shell.run("cp /disk/.flashUpdate/* /")
  end
  term.clear()
